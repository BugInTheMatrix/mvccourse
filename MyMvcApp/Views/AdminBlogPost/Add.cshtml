@model MyMvcApp.Models.ViewModels.AddBlogsRequest

<div class="bg-secondary bg-opacity-10 py-2">
    <div class="container">
        <h1>Add New Blog - Admin Functionality</h1>
    </div>
</div>

<div class="container py-5">
    <form method="post">
        <div class="mb-3">
            <label class="form-label">Heading</label>
            <input asp-for="Heading" class="form-control" id="heading" />
        </div>

        <div class="mb-3">
            <label class="form-label">PageTitle</label>
            <input asp-for="PageTitle" class="form-control" id="pageTitle" />
        </div>

        <div class="mb-3">
            <label class="form-label">Content</label>
            <textarea asp-for="Content" class="form-control" id="content"></textarea>
        </div>

        <div class="mb-3">
            <label class="form-label">ShortDescription</label>
            <input asp-for="ShortDescription" class="form-control" id="shortDescription" />
        </div>

        <div class="mb-3">
            <label class="form-label">FeaturedImageUrl</label>
            <input asp-for="FeaturedImageUrl" class="form-control" id="featuredImageUrl" />
        </div>

        <div class="mb-3">
            <label class="form-label">UrlHandle</label>
            <input asp-for="UrlHandle" class="form-control" id="urlHandle" />
        </div>

        <div class="mb-3">
            <label class="form-label">PublishedDate</label>
            <input asp-for="PublishedDate" type="date" class="form-control" id="publishedDate" />
        </div>

        <div class="mb-3">
            <label class="form-label">Author</label>
            <input asp-for="Author" class="form-control" id="author" />
        </div>

        <div class="form-check mb-3">
            <input asp-for="Visible" class="form-check-input" id="visible" />
            <label class="form-check-label">Visible</label>
        </div>

        <div class="mb-3">
            <label class="form-label">Tags</label>
            <select class="form-select" asp-items="@Model.Tags" asp-for="SelectedTag"></select>
        </div>

        <div class="mb-3">
            <button type="submit" class="btn btn-dark" >Save</button>
        </div>
    </form>
</div>
@section Scripts{
    <script>
        var editor=new FroalaEditor("#content");
    </script>
}
